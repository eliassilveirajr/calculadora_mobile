<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="container_botao">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>
    <style name="btn_operadores" parent="container_botao">
        <item name="android:background">@drawable/botao_operador_clicado</item>
        <item name="android:textColor">@color/branco</item>
    </style>
    <style name="btn_numericos" parent="container_botao">
        <item name="android:background">@drawable/botao_numero_clicado</item>
        <item name="android:textColor">@color/azul</item>
    </style>


</resources>